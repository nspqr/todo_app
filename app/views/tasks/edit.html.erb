<%= form_with(model: @task, local: true) do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :done %>
    <%= form.check_box :done %>
  </div>

  <div>
    <%= form.submit "保存" %>
  </div>
<% end %>