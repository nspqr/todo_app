<div class = "all">
<div class = "a">
<h1>タスク一覧</h1>
<%= link_to "新しいタスクを追加", new_task_path %>
<%= button_to "ログアウト", destroy_user_session_path, method: :delete %>
</div>
<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>説明</th>
      <th>完了</th>
      <th>締め切り</th>
      <th>優先度</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.done ? "✅" : "❌" %></td>
        <td><%= task.due_date %></td>
        <td><%= task.priority %></td>
        <td>
          <%= link_to "編集", edit_task_path(task) %> |
          <%= button_to "削除", task, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<% if @tasks.empty? %>
  <div class="task_name">
    <p class="task_bottom">タスクを追加しよう！</p>
  </div>
<% end %>

